---
import BaseLayout from '@components/base/BaseLayout.astro';
import Button from '@components/common/Button.astro';
---

<BaseLayout
  title="Tournament Invitation"
  description="You're invited to the Rhodes & Rhodes South West Invitational"
>
  <section class="">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 lg:col-8 xl:col-6 relative">
          <!-- Invitation Container -->
          <div
            class="min-h-[600px] absolute"
            id="initial-opening"
            style="margin-left: 50%;transform: translateX(-50%);"
          >
            <div class="envelope-wrapper">
              <div id="envelope" class="close">
                <div class="front flap"></div>
                <div class="front pocket"></div>
                <div class="letter">
                  <div class="words line1"></div>
                  <div class="words line2"></div>
                  <div class="words line3"></div>
                  <div class="words line4"></div>
                </div>
                <div class="hearts">
                  <div class="heart a1"></div>
                  <div class="heart a2"></div>
                  <div class="heart a3"></div>
                </div>
              </div>
            </div>

            <div class="buttons">
              <Button id="open" link="#" label="Open Invitation" />
            </div>
          </div>

          <!-- Invitation Card -->
          <div
            id="invitation-card"
            class="invitation-card glass rounded-lg p-8 max-w-md mx-auto text-center mb-12"
            style="display: none;"
          >
            <div class="mb-6">
              <h1
                class="text-3xl font-bold text-amber-800 dark:text-amber-200 mb-2"
              >
                Exclusive Invitation
              </h1>
              <div
                class="w-16 h-1 bg-gradient-to-r from-amber-400 to-amber-600 mx-auto rounded-full"
              >
              </div>
            </div>

            <div class="mb-6">
              <p class="text-lg mb-4 text-txt-p dark:text-darkmode-txt-p">
                Dear <span
                  id="player-name-display"
                  class="font-semibold text-amber-700 dark:text-amber-300"
                  >Valued Player</span
                >,
              </p>
              <p class="text-base mb-4 text-txt-s dark:text-darkmode-txt-s">
                You have been personally selected to participate in the
                prestigious
                <strong>Rhodes & Rhodes South West Invitational</strong> disc
                golf tournament.
              </p>
              <p class="text-base text-txt-s dark:text-darkmode-txt-s">
                Please check out the "about" page and the fixtures, and then
                RSVP below.
              </p>
            </div>

            <!-- RSVP Form -->
            <div style="margin: 0 -2em" class="dark:bg-gray-50">
              <script
                src="https://nwkfufou.formester.com/widget/standard.js"
                type="module"></script>

              <formester-standard-form
                set-auto-height="true"
                height="100%"
                width="100%"
                id="KSYiJMA9Z"
                url="https://nwkfufou.formester.com/f/KSYiJMA9Z"
              ></formester-standard-form>

              <p
                class="text-xs text-txt-light dark:text-darkmode-txt-light mt-4"
              >
                * No payment required. This is an invitation-only event.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Set these two up for a cross-fade */
  #invitation-card {
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  #initial-opening {
    transition: opacity 0.4s ease;
  }
  .envelope-wrapper {
    height: 600px;
  }
  #envelope {
    position: relative;
    width: 280px;
    height: 180px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    margin-left: auto;
    margin-right: auto;
    top: 400px;
    background-color: #9a3d1d;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .front {
    position: absolute;
    width: 0;
    height: 0;
    z-index: 3;
  }

  .flap {
    border-left: 140px solid transparent;
    border-right: 140px solid transparent;
    border-bottom: 82px solid transparent;
    /* a little smaller */
    border-top: 98px solid #9a3d1d;
    /* a little larger */
    transform-origin: top;
    pointer-events: none;
  }

  .pocket {
    border-left: 140px solid #dc6b44;
    border-right: 140px solid #dc6b44;
    border-bottom: 90px solid #e38b6d;
    border-top: 90px solid transparent;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
  }

  .letter {
    position: relative;
    background-color: #fff;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    height: 90%;
    top: 5%;
    border-radius: 6px;
    box-shadow: 0 2px 26px rgba(0, 0, 0, 0.12);
  }

  .letter:after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-image: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 25%,
      rgba(215, 227, 239, 0.7) 55%,
      #d7e3ef 100%
    );
  }

  .words {
    position: absolute;
    left: 10%;
    width: 80%;
    height: 14%;
    background-color: #eeeff0;
  }

  .words.line1 {
    top: 15%;
    width: 20%;
    height: 7%;
  }

  .words.line2 {
    top: 30%;
  }

  .words.line3 {
    top: 50%;
  }

  .words.line4 {
    top: 70%;
  }

  .open .flap {
    transform: rotateX(180deg);
    transition:
      transform 0.4s ease,
      z-index 0.6s,
      opacity 2s 0.4s ease;
    z-index: 1;
    opacity: 0;
  }

  .open .pocket {
    transition: opacity 2s 0.4s ease;
    opacity: 0;
  }

  .close .flap {
    transform: rotateX(0deg);
    transition:
      transform 0.4s 0.6s ease,
      z-index 1s;
    z-index: 5;
  }

  .close .letter {
    transform: translateY(0px);
    transition:
      transform 0.4s ease,
      z-index 1s;
    z-index: 1;
  }

  .open .letter {
    transform: translateY(-360px);
    transition:
      transform 2s 0.6s ease,
      z-index 0.6s;
    z-index: 2;
  }

  #envelope.open {
    background-color: transparent;
    transition: background 2s 0.4s ease;
    box-shadow: none;
  }

  .hearts {
    position: absolute;
    top: 90px;
    left: 0;
    right: 0;
    z-index: 2;
  }

  .heart {
    position: absolute;
    bottom: 0;
    right: 10%;
    pointer-events: none;
  }

  .heart:before,
  .heart:after {
    position: absolute;
    content: '';
    left: 50px;
    top: 0;
    width: 50px;
    height: 80px;
    background: #d00000;
    border-radius: 50px 50px 0 0;
    transform: rotate(-45deg);
    transform-origin: 0 100%;
    pointer-events: none;
  }

  .heart:after {
    left: 0;
    transform: rotate(45deg);
    transform-origin: 100% 100%;
  }

  .close .heart {
    opacity: 0;
    -webkit-animation: none;
    animation: none;
  }

  .a1 {
    left: 20%;
    transform: scale(0.6);
    opacity: 1;
    -webkit-animation:
      slideUp 4s linear 1,
      sideSway 2s ease-in-out 4 alternate;
    -moz-animation:
      slideUp 4s linear 1,
      sideSway 2s ease-in-out 4 alternate;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    -webkit-animation-delay: 0.7s;
    animation-delay: 0.7s;
  }

  .a2 {
    left: 55%;
    transform: scale(1);
    opacity: 1;
    -webkit-animation:
      slideUp 5s linear 1,
      sideSway 4s ease-in-out 2 alternate;
    -moz-animation:
      slideUp 5s linear 1,
      sideSway 4s ease-in-out 2 alternate;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    -webkit-animation-delay: 0.7s;
    animation-delay: 0.7s;
  }

  .a3 {
    left: 10%;
    transform: scale(0.8);
    opacity: 1;
    -webkit-animation:
      slideUp 7s linear 1,
      sideSway 2s ease-in-out 6 alternate;
    -moz-animation:
      slideUp 7s linear 1,
      sideSway 2s ease-in-out 6 alternate;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    -webkit-animation-delay: 0.7s;
    animation-delay: 0.7s;
  }

  @-webkit-keyframes slideUp {
    0% {
      top: 0;
    }
    100% {
      top: -600px;
    }
  }
  @keyframes slideUp {
    0% {
      top: 0;
    }
    100% {
      top: -600px;
    }
  }
  @-webkit-keyframes sideSway {
    0% {
      margin-left: 0px;
    }
    100% {
      margin-left: 50px;
    }
  }
  @keyframes sideSway {
    0% {
      margin-left: 0px;
    }
    100% {
      margin-left: 50px;
    }
  }
  body {
    background-color: #a8e2ff;
  }

  .envlope-wrapper {
    height: 380px;
  }

  .buttons {
    text-align: center;
  }

  .buttons button {
    font-weight: 800;
    font-style: normal;
    transition: all 0.1s linear;
    -webkit-appearance: none;
    background-color: transparent;
    border: solid 2px #dc6b44;
    border-radius: 4px;
    color: #dc6b44;
    display: inline-block;
    font-size: 14px;
    text-transform: uppercase;
    margin: 5px;
    padding: 10px;
    line-height: 1em;
    text-decoration: none;
    min-width: 120px;
    cursor: pointer;
  }

  .buttons button:hover {
    background-color: #dc6b44;
    color: #fff;
  }
</style>

<script>
  // Extract and display playerName from URL parameters
  document.addEventListener('DOMContentLoaded', () => {
    let opened = false;
    // Get player name from URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const playerName = urlParams.get('playerName') || 'Valued Player';

    // Update the display
    const playerNameDisplay = document.getElementById('player-name-display');
    const playerNameInput = document.getElementById('player-name');

    if (playerNameDisplay) {
      playerNameDisplay.textContent = playerName;
    }

    if (playerNameInput) {
      playerNameInput.value = playerName;
    }

    var envelope = document.getElementById('envelope');
    var btn_open = document.getElementById('open');

    function open() {
      if (opened) {
        return;
      }
      opened = true;
      envelope?.classList.add('open');
      envelope?.classList.remove('close');
      window.setTimeout(() => {
        document.getElementById('invitation-card').style.display = 'block';
        document.getElementById('invitation-card').style.opacity = 1;
        document.getElementById('initial-opening').style.opacity = 0;
        window.setTimeout(() => {
          document.getElementById('initial-opening').style.display = 'none';
        }, 400);
      }, 2000);
    }
    envelope?.addEventListener('click', (e) => {
      e.preventDefault();
      open();
    });
    btn_open?.addEventListener('click', (e) => {
      e.preventDefault();
      open();
    });

    window.setTimeout(open, 2000);

    // @todo zoom the letter then remove and reveal the actual form!
    // @todo make the buttons into buttons!
    // @todo make the form work!
  });
</script>
