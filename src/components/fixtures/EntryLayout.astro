---
import BaseLayout from '@components/base/BaseLayout.astro';
import Pagination from '@components/common/Pagination.astro';
import Share from '@components/common/Share.astro';
import { plainify } from '@lib/textConverter';
import type { FixturesEntry } from '@/types';
import { format } from 'date-fns';

import { render } from 'astro:content';
import EntryHeader from '@components/common/EntryHeader.astro';

interface Props {
  entry: FixturesEntry;
  pageIDs: string[];
  pageIndex: number;
  pageCount: number;
}

const { entry, pageIDs, pageIndex, pageCount }: Props = Astro.props;
const {
  title,
  description,
  autodescription,
  image,
  date,
  time,
  location,
  city,
  country,
  udiscLink,
  accommodation,
  mapEmbedUrl,
} = entry.data;
const { Content } = await render(entry);

const descriptionLength = 200;

const entryDescription =
  description ||
  (autodescription ? plainify(entry.body!.slice(0, descriptionLength)) : null);
---

<!-- 
@todo

- Admin and Costs
- Difficulty
- Add-ons and fun
-->
<BaseLayout title={title} description={entryDescription} image={image?.src}>
  <section class="flex container justify-center my-8">
    <div class="col md:col-10 lg:col-8">
      <article>
        <section>
          <EntryHeader entry={entry} showImage showDate />
        </section>

        <!-- Tournament Details Card -->
        <section class="mb-6">
          <div class="glass rounded-lg p-6">
            <h2 class="text-h3 font-semibold mb-4 text-txt-p">
              Tournament Details
            </h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <svg
                    class="w-6 h-6 text-txt-s flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <div>
                    <div class="font-semibold text-txt-p">
                      {format(date, 'EEEE, MMMM do yyyy')}
                    </div>
                    <div class="text-txt-light">Start time: {time}</div>
                  </div>
                </div>

                <div class="flex items-center gap-3">
                  <svg
                    class="w-6 h-6 text-txt-s flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div>
                    <div class="font-semibold text-txt-p">{location}</div>
                    <div class="text-txt-light">{city}, {country}</div>
                  </div>
                </div>
              </div>

              <div class="flex flex-col gap-3">
                <a
                  href={udiscLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-6 py-3 bg-bg-s text-txt-p rounded-lg hover:bg-bg-t transition-colors font-medium"
                >
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                   View Course on UDisc
                </a>

                <a
                  href="/rules"
                  class="inline-flex items-center justify-center px-6 py-3 bg-txt-p text-bg-p rounded-lg hover:bg-txt-s transition-colors font-medium"
                >
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path>
                  </svg>
                   Tournament Rules
                </a>
              </div>
            </div>
          </div>
        </section>

        <!-- Course Information -->
        <section class="content mb-6 glass px-6 py-4 rounded-lg">
          <Content />
        </section>

        <!-- Map Section -->
        {
          mapEmbedUrl && (
            <section class="mb-6">
              <div class="glass rounded-lg p-6">
                <h2 class="text-h3 font-semibold mb-4 text-txt-p">
                  Course Location
                </h2>
                <div class="aspect-video rounded-lg overflow-hidden">
                  <iframe
                    src={mapEmbedUrl}
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="w-full h-full"
                  />
                </div>
              </div>
            </section>
          )
        }

        <!-- Accommodation Section -->
        {
          accommodation && accommodation.length > 0 && (
            <section class="mb-6">
              <div class="glass rounded-lg p-6">
                <h2 class="text-h3 font-semibold mb-4 text-txt-p">
                  Recommended Accommodation
                </h2>
                <div class="grid gap-4">
                  {accommodation.map((hotel) => (
                    <div class="border border-border rounded-lg p-4 bg-bg-p">
                      <div class="flex items-start justify-between gap-4">
                        <div class="flex-1">
                          <h3 class="font-semibold text-txt-p mb-1">
                            {hotel.name}
                          </h3>
                          {hotel.description && (
                            <p class="text-txt-light text-sm mb-2">
                              {hotel.description}
                            </p>
                          )}
                        </div>
                        {hotel.website && (
                          <a
                            href={hotel.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center px-3 py-1 bg-bg-s text-txt-p rounded text-sm hover:bg-bg-t transition-colors flex-shrink-0"
                          >
                            Visit Website
                            <svg
                              class="w-3 h-3 ml-1"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                              />
                            </svg>
                          </a>
                        )}
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </section>
          )
        }
      </article>
    </div>
  </section>

  <section class="container mt-4 mb-8 col md:col-10 lg:col-8">
    <hr />
    <div class="flex items-center justify-center lg:justify-end mt-4">
      <Share
        title={title}
        description={entryDescription}
        folder={'fixtures'}
        id={entry.id}
      />
    </div>
  </section>

  <Pagination
    collection="fixtures"
    pageIDs={pageIDs}
    pageIndex={pageIndex}
    pageCount={pageCount}
  />
</BaseLayout>
